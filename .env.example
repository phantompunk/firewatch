# Database
DATABASE_URL=file:/data/firewatch.db?_pragma=journal_mode(WAL)&_pragma=foreign_keys(on)&_pragma=busy_timeout(5000)

# Local Database
# DATABASE_URL="file:./tmp/firewatch-dev.db?_pragma=journal_mode(WAL)&_pragma=foreign_keys(on)&_pragma=busy_timeout(5000)&parseTime=true"

# Paths to files containing exactly 32 random bytes (never the key itself).
# Generate with: openssl rand -out /run/secrets/session_secret 32
#                openssl rand -out /run/secrets/settings_encryption_key 32
#                openssl rand -out /run/secrets/email_hmac_key 32
SESSION_SECRET_FILE=/run/secrets/session_secret
SETTINGS_ENCRYPTION_KEY_FILE=/run/secrets/settings_encryption_key
EMAIL_HMAC_KEY_FILE=/run/secrets/email_hmac_key

# SMTP (initial bootstrap values â€” move to Settings UI after first deploy)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=
SMTP_FROM_ADDRESS=no-reply@example.org
SMTP_FROM_NAME=Community Reports
DESTINATION_EMAIL=reports@example.org

# Server
PORT=8080
ENV=development
LISTEN_ADDR=:8080

# Set to "false" only for local HTTP development. Must be "true" (default) in production.
SECURE_COOKIES=true

# First-run seeding (remove from environment after first login)
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_EMAIL=admin@example.org
SEED_ADMIN_PASSWORD=change-me-on-first-login

# URLs for transactional emails
ADMIN_INVITE_BASE_URL=https://example.org
PASSWORD_RESET_BASE_URL=https://example.org
